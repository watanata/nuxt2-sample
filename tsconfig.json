{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": true,
    "removeComments": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "~/*": ["./*"]
    }
  }
}
